        <h2 class="mt-5 py-3 text-center fw-bold bg-primary text-light" id="textbook">Textbooks</h2>
        <div class="row mt-2 mb-5 gy-5">
            <% textbooks.forEach(textbook => { %> 
                <div class="col">
                    <div class="card h-100" style="width: 14rem;">
                        <img src="<%= textbook.img %>" class="card-img-top" alt="book cover image"  height="200px">
                        <div class="card-body">
                        <h5 class="card-title fw-bold"><%= textbook.title %> </h5>
                        <p class="card-text"> By <%= textbook.author %> </p>
                        <p>ISBN: <%= textbook.ISBN %> </p>
                        <p class="status fw-bold"><%= textbook.status %> </p>
                        <form class=" form_6" action="/update" method="post">
                            <input type="text" name="title" value="<%= textbook.title %>" style="display: none;" >
                            <% if ( textbook.status  == 'Out of Stock') { %>
                                <button type="button" class="btn btn-primary rent mb-3" disabled>RENT</button>
                                
                            <% }else if(textbook.rentedBy == user){ %>
                                <button type="button" class="btn btn-primary rent mb-3" disabled>RENTED</button>
                            <%} else{ %>
                                <button type="submit" class="btn btn-primary rent mb-3 mysterybtn">RENT</button>
                            <% } %> 
                        </form> 
                        <p class="loginp">You need to <a href="/login" class="logintorent">login</a> to rent a book</p>
